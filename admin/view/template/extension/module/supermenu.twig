$(document).on('change','.item-row .item-type',function(){
  var parent = $(this).parent().parent();
  parent.find('.typediv').hide();
  if ($(this).find('.ocat').is(":selected")) {
     parent.find('.cat-type').fadeIn('fast');
     parent.find('.viewsel').fadeIn('fast');
  } else if ($(this).find('.oinfol').is(":selected")) {
     parent.find('.info-type').fadeIn('fast');
  } else if ($(this).find('.ocustom').is(":selected")) {
     parent.find('.custom-type').fadeIn('fast');
  } else if ($(this).find('.mand').is(":selected") || $(this).find('.more').is(":selected") || $(this).find('.moredoi').is(":selected")) {
     parent.find('.viewsel').fadeIn('fast');
  } else if ($(this).find('.oproducts').is(":selected")) {
     parent.find('.oproducts-type').fadeIn('fast');
     parent.find('.viewsel').fadeIn('fast');
     parent.find('.productlimit-type').fadeIn('fast');
  } else if ($(this).find('.catprods').is(":selected") || $(this).find('.catcatprods').is(":selected")) {
     parent.find('.cat-type').fadeIn('fast');
     parent.find('.viewsel').fadeIn('fast');
     parent.find('.productlimit-type').fadeIn('fast');
  }
});

