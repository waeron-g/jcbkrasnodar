{{ header }}{{ column_left }}
<div id="content">
  	<div class="page-header">
    	<div class="container-fluid">
      		<div class="pull-right">
        		<button type="submit" form="form-supermenu" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        		<a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
      		</div>
      		<h1>{{ heading_title }}</h1>
      		<ul class="breadcrumb">
        		{% for breadcrumb in breadcrumbs %} 
        			<li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        		{% endfor %} 
      		</ul>
    	</div>
  	</div>
  	<div class="container-fluid">
    	{% if error_warning %} 
    		<div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      			<button type="button" class="close" data-dismiss="alert">&times;</button>
    		</div>
    	{% endif %} 
    	{% if success %} 
    		<div class="alert alert-success"><i class="fa fa-check-circle"></i> {{ success }}
      			<button type="button" class="close" data-dismiss="alert">&times;</button>
    		</div>
    	{% endif %} 
    	<div class="panel panel-default">

      		<div class="panel-heading">
        		<div class="input-group">
					<span class="input-group-addon" style="min-width: 150px"><i class="fa fa-pencil"></i> {{ text_editfor }}</span>
					<select class="form-control" onchange="location = this.value;">
						<option {{ store == 0 ? 'selected="selected"' : '' }} value="{{ module_url }}">По умолчанию</option>
		      			{% for st in stores %} 
							<option {{ st.store_id == store ? 'selected="selected"' : '' }} value="{{ module_url ~ '&store=' ~ st.store_id }}">{{ st.name }}</option>
		      			{% endfor %} 
					</select>
				</div>
      		</div>

      		<div class="panel-body">
        	<form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-supermenu" class="form-horizontal">

				<ul class="nav nav-tabs">
					<li class="active"><a href="#tab-items" data-toggle="tab">{{ tab_items }}</a></li>
					<li><a href="#tab-settings" data-toggle="tab">{{ tab_settings }}</a></li>
					<li><a href="#tab-html" data-toggle="tab">{{ tab_html }}</a></li>
            	</ul>

				<div class="tab-content">
					<div class="tab-pane active in" id="tab-items">
				  		<div class="table-responsive">
							<table id="item" class="table table-striped table-bordered table-hover" style="display: none">
							<thead>
								<tr>
									<td class="text-left">{{ entry_type }}</td>
									<td style="width: 46%;" class="text-left">{{ entry_iset }}</td>
									<td class="text-left">{{ entry_advanced }}</td>
									<td></td>
								</tr>
							</thead>
							{% set item_row = 0 %}
							{% set libg = '#fcfcfc' %}
							{% for item in items %} 
								{% set libg = libg  ==  '#fff' ? '#fcfcfc' : '#fff' %}
								<tbody class="item-row" id="item-row{{ item_row }}">
									<tr>
										<td class="text-left" style="background: {{ libg }};">
											<select style="border: 4px solid {{ item.type  ==  'cat' ? '#C85555' : (item.type  ==  'infol' ? '#7593D9' : (item.type  ==  'infod' ? '#D49ECA' : (item.type  ==  'custom' ? '#F4D98E' : (item.type  ==  'mand' ? '#A0C183' : (item.type  ==  'products' ? '#8F6E96' : (item.type  ==  'catprods' ? '#C5B15F' : (item.type  ==  'login' ? '#9DC58D' : '#80ACAB') ) ) ) ) ) ) }};" class="item-type" id="item-type{{ item_row }}" name="supermenu_item[{{ item_row }}][type]">
												<option class="ocat" id="ocat{{ item_row }}" value="cat" {% if item.type  ==  'cat' %}selected="selected"{% endif %}>{{ type_cat }}</option>
												<option class="oinfol" id="oinfol{{ item_row }}" value="infol" {% if item.type  ==  'infol' %}selected="selected"{% endif %}>{{ type_infol }}</option>
												<option value="infod" {% if item.type  ==  'infod' %}selected="selected"{% endif %}>{{ type_infod }}</option>
												<option class="ocustom" id="ocustom{{ item_row }}" value="custom" {% if item.type  ==  'custom' %}selected="selected"{% endif %}>{{ type_custom }}</option>
												<option class="mand" id="mand{{ item_row }}" {% if item.type == 'mand' %}value="mand" selected="selected"{% endif %}>{{ type_mand }}</option>
												<option class="more" id="more{{ item_row }}" value="more" {% if item.type == 'more' %}selected="selected"{% endif %}>{{ type_more }}</option>
												<option class="moredoi" id="moredoi{{ item_row }}" {% if item.type == 'more2' %}value="more2" selected="selected"{% endif %}>{{ type_more2 }}</option>
												<option class="oproducts" id="oproducts{{ item_row }}" value="products" {% if item.type == 'products' %}selected="selected"{% endif %}>{{ type_products }}</option>
												<option class="catprods" id="catprods{{ item_row }}" value="catprods" {% if item.type == 'catprods' %}selected="selected"{% endif %}>{{ type_catprods }}</option>
												<option class="catcatprods" id="catcatprods{{ item_row }}" value="catcatprods" {% if item.type == 'catcatprods' %}selected="selected"{% endif %}>{{ type_catcatprods }}</option>
												<option class="login" id="login{{ item_row }}" value="login" {% if item.type == 'login' %}selected="selected"{% endif %}>{{ type_login }}</option>
											</select>
											<div class="viewsel viewsel{{ item_row }}"><b>{{ text_sview }} </b>
												<select name="supermenu_item[{{ item_row }}][view]" class="form-control">
													<option value="0" {% if not item.view %}selected="selected"{% endif %}>{{ text_slist }}</option>
													<option value="1" {% if item.view  ==  '1' %}selected="selected"{% endif %}>{{ text_sgrid }}</option>
													<option value="f0" {% if item.view  ==  'f0' %}selected="selected"{% endif %}>{{ text_dflist }}</option>
													<option value="f1" {% if item.view  ==  'f1' %}selected="selected"{% endif %}>{{ text_dfgrid }}</option>
												</select>
											</div>
										</td>
										<td class="text-left" style="background: {{ libg }};">
											<div style="position: relative">
												<div class="sorder">
														{{ text_sorder }}
														<input size="2" type="text" name="supermenu_item[{{ item_row }}][sorder]" value="{{ item.sorder ? item.sorder : '' }}" />
												</div>

												<div id="cat-type{{ item_row }}" class="typediv cat-type">
													<h3 class="superh3">{{ entry_category }}</h3>

                  									<input type="hidden" name="supermenu_item[{{ item_row }}][category_id]" value="{{ categories[item.category_id]['name'] ? item.category_id : 0 }}" />
													<input type="text" value="{{ categories[item.category_id]['name'] }}" placeholder="{{ entry_category }}" class="form-control category-autocomplete" />

												</div>
		 
												<div id="info-type{{ item_row }}" class="typediv info-type">
														<h3 class="superh3">{{ entry_information }}</h3>
														<select class="form-control" name="supermenu_item[{{ item_row }}][information_id]">
															{% for information in informations %}
																{% if information.information_id  ==  item.information_id %} 
																	<option value="{{ information.information_id }}" selected="selected">{{ information.name }}</option>
																{% else %}   
																	<option value="{{ information.information_id }}">{{ information.name }}</option>
																{% endif %} 
															{% endfor %} 
														</select>
												</div>
		   
												<div id="oproducts-type{{ item_row }}" class="typediv oproducts-type">
														<h3 class="superh3">{{ text_whatproducts }}</h3>

														<div class="btn-group selectbuts">
        													<button type="button" class="btn {{ item.products ==  'latest' ? 'btn-info' : 'btn-default' }}" data-toggle="tooltip" data-value="latest" title="">{{ text_productlatest }}</button>
        													<button type="button" class="btn {{ item.products ==  'special' ? 'btn-info' : 'btn-default' }}" data-toggle="tooltip" data-value="special" title="">{{ text_productspecial }}</button>
        													<button type="button" class="btn {{ item.products ==  'featured' ? 'btn-info' : 'btn-default' }}" data-toggle="tooltip" data-value="featured" title="">{{ text_productfeatured }}</button>
        													<button type="button" class="btn {{ item.products ==  'bestseller' ? 'btn-info' : 'btn-default' }}" data-toggle="tooltip" data-value="bestseller" title="">{{ text_productbestseller }}</button>
      													</div>
      													<input type="hidden" name="supermenu_item[{{ item_row }}][products]" value="{{ item.products }}" />

												</div>	

												<div id="productlimit-type{{ item_row }}" class="typediv productlimit-type">
													<br />
													<div class="input-group long">
														<span class="input-group-addon long">{{ text_productlimit }}</span>
														<input size="1" class="form-control" type="text" name="supermenu_item[{{ item_row }}][productlimit]" value="{{ item.productlimit ? item.productlimit : '5' }}" />
													</div>
												</div>
												
												<div id="custom-type{{ item_row }}" class="typediv custom-type">
													<h3 class="superh3">{{ entry_custom }}</h3>
													{% for language in languages %} 
														<div class="input-group long">
															<span class="input-group-addon long"><img class="inline-img" src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /> {{ custom_name }}</span>
															<input class="form-control" type="text" name="supermenu_item[{{ item_row }}][customname][{{ language.language_id }}]" value="{{ item.customname[language.language_id] }}" />
														</div>
														<br />
														<div class="input-group long">
															<span class="input-group-addon long"><img class="inline-img" src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /> {{ custom_url }}</span>
															<input class="form-control" type="text" name="supermenu_item[{{ item_row }}][customurl][{{ language.language_id }}]" value="{{ item.customurl[language.language_id] }}" />
														</div>
													{% endfor %} 
												</div>
		  
												<h3 class="addsuperh3" id="hideadd-type{{ item_row }}">{{ entry_add }}</h3>
												<div id="add-type{{ item_row }}" class="addtypediv">
													{% for language in languages %} 
														<div class="addTypeInner">
															<div class="input-group">
																<span class="input-group-addon"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /></span>
																<input class="form-control" type="text" name="supermenu_item[{{ item_row }}][addurl][{{ language.language_id }}]" value="{{ item.addurl[language.language_id] }}" placeholder="Ссылка на банере" />
															</div>
															<div class="input-group">
																<span class="input-group-addon"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /></span>
																<a href="" id="thumb-image_{{ item_row }}{{ language.language_id }}" data-toggle="image" class="img-thumbnail">
																	<img style="max-width: 200px" src="{{ item.image[language.language_id]|length > 3 ? (http_catalog_url ~ 'image/' ~ item.image[language.language_id]) : no_image }}" alt="" title="" data-placeholder="{{ no_image }}" />
																</a>
																<input type="hidden" name="supermenu_item[{{ item_row }}][image][{{ language.language_id }}]" value="{{ item.image[language.language_id] }}" id="input-image_{{ item_row }}{{ language.language_id }}" />
															</div>
														</div>
         											{% endfor %}
												</div>
											</div>
										</td>
										<td class="text-left" style="background: {{ libg }};">
											<div class="advm{{ item_row }} advs">
												<a class="expand btn btn-info"><i class="fa fa-arrows-alt" aria-hidden="true"></i> {{ text_expando }}</a>
												<div class="advh">
													<a class="closeadvm"><strong><span><span><i class="fa fa-times" area-hidden="true"></i></span></span></strong></a>
													<table class="smenua">
														<tr>
															<td>{{ text_tlcolor }}</td>
															<td><input type="text" name="supermenu_item[{{ item_row }}][tlcolor]" class="sm-colors form-control" value="{{ item.tlcolor }}" size="7" /></td>
															<td>{{ text_tlstyle }}</td>
															<td><input type="text" name="supermenu_item[{{ item_row }}][tlstyle]" value="{{ item.tlstyle }}" size="28" class="form-control" /></td>
														</tr>
														<tr>
															<td>{{ text_chtml }}</td>
															<td>
																<select name="supermenu_item[{{ item_row }}][chtml]" class="form-control">
																	<option value="0" {% if not item.chtml %}selected="selected"{% endif %}>{{ text_no }}</option>
																	<option value="1" {% if  item.chtml  ==  1 %}selected="selected"{% endif %}>{{ text_alldrop }}</option>
																	<option value="2" {% if  item.chtml  ==  2 %}selected="selected"{% endif %}>{{ text_justadd }}</option>
																	<option value="3" {% if  item.chtml  ==  3 %}selected="selected"{% endif %}>{{ text_overdrop }}</option>
																</select>	
																<select name="supermenu_item[{{ item_row }}][cchtml]" class="form-control">
																	<option value="area1" {% if item.cchtml  ==  'area1' %}selected="selected"{% endif %}>Area 1</option>
																	<option value="area2" {% if item.cchtml  ==  'area2' %}selected="selected"{% endif %}>Area 2</option>
																	<option value="area3" {% if item.cchtml  ==  'area3' %}selected="selected"{% endif %}>Area 3</option>
																	<option value="area4" {% if item.cchtml  ==  'area4' %}selected="selected"{% endif %}>Area 4</option>
																	<option value="area5" {% if item.cchtml  ==  'area5' %}selected="selected"{% endif %}>Area 5</option>
																	<option value="area6" {% if item.cchtml  ==  'area6' %}selected="selected"{% endif %}>Area 6</option>
																	<option value="area7" {% if item.cchtml  ==  'area7' %}selected="selected"{% endif %}>Area 7</option>
																	<option value="area8" {% if item.cchtml  ==  'area8' %}selected="selected"{% endif %}>Area 8</option>
																	<option value="area9" {% if item.cchtml  ==  'area9' %}selected="selected"{% endif %}>Area 9</option>
																	<option value="area10" {% if item.cchtml  ==  'area10' %}selected="selected"{% endif %}>Area 10</option>
																</select>
															</td>
															<td>{{ text_subcatdisplay }}</td>
															<td>
																<select name="supermenu_item[{{ item_row }}][subcatdisplay]" class="form-control">
																	<option value="all" {% if item.subcatdisplay  ==  'all' %}selected="selected"{% endif %}>{{ text_subcatdisplay_all }}</option>
																	<option value="level1" {% if item.subcatdisplay  ==  'level1' %}selected="selected"{% endif %}>{{ text_subcatdisplay_level1 }}</option>
																	<option value="none" {% if item.subcatdisplay  ==  'none' %}selected="selected"{% endif %}>{{ text_subcatdisplay_none }}</option>
																</select>
															</td>
														</tr>
														<tr>
															<td>{{ text_dwidth }}</td>
															<td><input size="3" type="text" name="supermenu_item[{{ item_row }}][dwidth]" value="{{ item.dwidth }}" class="form-control" /></td>
															<td> {{ text_iwidth }}</td>
															<td><input size="3" type="text" name="supermenu_item[{{ item_row }}][iwidth]" value="{{ item.iwidth }}" class="form-control" /></td>
														</tr>
														<tr>
															<td>{{ text_fbrands }}</td>
															<td colspan="3"><input size="48" type="text" name="supermenu_item[{{ item_row }}][fbrands]" value="{{ item.fbrands }}" class="form-control" /></td>
														</tr>
														<tr>
															<td>{{ text_linknewtab }} <input type="checkbox" name="supermenu_item[{{ item_row }}][tntab]" value="1" {{ item.tntab ? 'checked="checked"' : '' }} /></td>
															<td colspan="2">{{ text_mini_flyout }} <input type="checkbox" name="supermenu_item[{{ item_row }}][mfly]" value="1" {{ item.mfly ? 'checked="checked"' : '' }} /></td>
															<td>{{ text_flyout_left }} <input type="checkbox" name="supermenu_item[{{ item_row }}][mflyl]" value="1" {{ item.mflyl ? 'checked="checked"' : '' }} /></td>
														</tr>
													</table>
												</div>
											</div>
										</td>
										<td class="text-left" style="background: {{ libg }};">
											<button type="button" onclick="$('#item-row{{ item_row }}').remove();" data-toggle="tooltip" title="{{ button_remove }}" class="btn btn-danger"><i class="fa fa-minus-circle"></i></button>
										</td>
									</tr>
								</tbody>
								{% set item_row = item_row + 1 %} 
							{% endfor %}
							<tfoot>
								<tr>
									<td colspan="3"></td>
									<td class="text-left">
										<button type="button" onclick="additem();" data-toggle="tooltip" title="{{ button_add_item }}" class="btn btn-primary"><i class="fa fa-plus-circle"></i></button>
									</td>
								</tr>
							</tfoot>
						</table>
				  	</div>
				</div>
				<div class="tab-pane" id="tab-settings">
					<div class="row">
						<div class="col-sm-5 col-xs-12" >
							<h2 class="h2settings">{{ text_general }}</h2>
							<div class="settings-row">
								<div class="lefter">Статус модуля</div>
								<div class="btn-group selectbuts">
        							<button type="button" class="btn {{ supermenu_showstatus ? 'btn-info' : 'btn-default' }}" data-toggle="tooltip" data-value="1" title="">{{ text_disabled }}</button>
        							<button type="button" class="btn {{ not supermenu_showstatus ? 'btn-success' : 'btn-default' }}" data-toggle="tooltip" data-value="0" title="">{{ text_enabled }}</button>
      							</div>
      							<input type="hidden" name="supermenu_showstatus" value="{{ supermenu_showstatus }}" />  
							</div>
							<div class="settings-row">
								<div class="lefter">{{ text_settings_dropdowntitle }}</div>
								<div class="btn-group selectbuts">
        							<button type="button" class="btn {{ supermenu_dropdowntitle ? 'btn-info' : 'btn-default' }}" data-toggle="tooltip" data-value="1" title="">{{ text_yes }}</button>
        							<button type="button" class="btn {{ not supermenu_dropdowntitle ? 'btn-info' : 'btn-default' }}" data-toggle="tooltip" data-value="0" title="">{{ text_no }}</button>
      							</div>
      							<input type="hidden" name="supermenu_dropdowntitle" value="{{ supermenu_dropdowntitle }}" />  	  
							</div>
							<div class="settings-row">
								<div class="lefter">{{ text_settings_menuskin }}</div>
								<div class="btn-group selectbuts">
        							<button type="button" class="btn {{ supermenu_skin ==  'default' ? 'btn-info' : 'btn-default' }}" data-toggle="tooltip" data-value="default" title="">По умолчанию</button>
        							<button type="button" class="btn {{ supermenu_skin ==  'white' ? 'btn-info' : 'btn-default' }}" data-toggle="tooltip" data-value="white" title="">Белый</button>
        							<button type="button" class="btn {{ supermenu_skin ==  'alt1' ? 'btn-info' : 'btn-default' }}" data-toggle="tooltip" data-value="alt1" title="">Комбинация 1</button>
        							<button type="button" class="btn {{ supermenu_skin ==  'alt2' ? 'btn-info' : 'btn-default' }}" data-toggle="tooltip" data-value="alt2" title="">Комбинация 2</button>
        							<button type="button" class="btn {{ supermenu_skin ==  'imgmenu' ? 'btn-info' : 'btn-default' }}" data-toggle="tooltip" data-value="imgmenu" title="">С иконками</button>
      							</div>
      							<input type="hidden" name="supermenu_skin" value="{{ supermenu_skin }}" />	  
							</div>
							<div class="settings-row">
								<div class="lefter">{{ text_settings_topitemlink }}</div>
								<div class="btn-group-vertical selectbuts">
        							<button type="button" class="btn {{ supermenu_topitemlink ==  'bottom' ? 'btn-info' : 'btn-default' }}" data-toggle="tooltip" data-value="bottom" title="">Кнопка "Смотреть все" внизу меню</button>
        							<button type="button" class="btn {{ supermenu_topitemlink ==  'topitem' ? 'btn-info' : 'btn-default' }}" data-toggle="tooltip" data-value="topitem" title="">Главный пункт со ссылкой</button>
        							<button type="button" class="btn {{ supermenu_topitemlink ==  'heading' ? 'btn-info' : 'btn-default' }}" data-toggle="tooltip" data-value="heading" title="">Заголовок меню со ссылкой</button>
      							</div>
      							<input type="hidden" name="supermenu_topitemlink" value="{{ supermenu_topitemlink }}" />  	  
							</div>
							<div class="settings-row">
								<div class="lefter">{{ text_settings_tophomelink }}</div>
								<div class="btn-group selectbuts">
        							<button type="button" class="btn {{ supermenu_tophomelink ==  'none' ? 'btn-info' : 'btn-default' }}" data-toggle="tooltip" data-value="none" title="">Нет</button>
        							<button type="button" class="btn {{ supermenu_tophomelink ==  'light' ? 'btn-info' : 'btn-default' }}" data-toggle="tooltip" data-value="light" title="">Да - светлые иконки</button>
        							<button type="button" class="btn {{ supermenu_tophomelink ==  'dark' ? 'btn-info' : 'btn-default' }}" data-toggle="tooltip" data-value="dark" title="">Да - темные иконки</button>
      							</div>
      							<input type="hidden" name="supermenu_tophomelink" value="{{ supermenu_tophomelink }}" />  	  
							</div>
							<div class="settings-row">
								<div class="lefter">{{ text_settings_supercache }}</div>
								<div class="btn-group selectbuts">
        							<button type="button" class="btn {{ supermenu_cache ? 'btn-success' : 'btn-default' }}" data-toggle="tooltip" data-value="1" title="">{{ text_enabled }}</button>
        							<button type="button" class="btn {{ not supermenu_cache ? 'btn-info' : 'btn-default' }}" data-toggle="tooltip" data-value="0" title="">{{ text_disabled }}</button>
      							</div>
      							<input type="hidden" name="supermenu_cache" value="{{ supermenu_cache }}" />
							</div>
							<div class="settings-row" style="display: none;">
								<div class="lefter">{{ text_settings_flyoutwidth }}</div>
								<div class="input-group">
									<input type="text" name="supermenu_flyout_width" value="{{ supermenu_flyout_width }}" class="form-control" size="3" />
									<span class="input-group-addon">px</span>
								</div>
							</div>
							<div class="settings-row">
								<div class="lefter">{{ text_settings_bspacewidth }}</div>
								<input type="text" name="supermenu_bannerspace_width" class="form-control small" value="{{ supermenu_bannerspace_width }}" size="3" /> px
							</div>
							<div class="settings-row">
								<div class="lefter">{{ text_3dlevellimit }}</div>
								<input type="text" name="supermenu_3dlevellimit" value="{{ supermenu_3dlevellimit }}" size="3" class="form-control small" />
							</div>
							<div class="settings-row">
								<div class="lefter">{{ entry_image_size }} </div>
